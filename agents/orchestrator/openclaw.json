{
  "gateway": {
    "port": 18789,
    "mode": "local",
    "bind": "loopback",
    "auth": {
      "mode": "token",
      "token": "${OPENCLAW_GATEWAY_TOKEN}"
    }
  },

  "agents": {
    "defaults": {
      "model": {
        "primary": "anthropic/claude-sonnet-4",
        "fallbacks": ["openai/gpt-5"]
      }
    }
  },

  "channels": {
    "slack": {
      "enabled": true,
      "mode": "socket",
      "botToken": "${SLACK_BOT_TOKEN}",
      "appToken": "${SLACK_APP_TOKEN}",
      "userTokenReadOnly": true,
      "groupPolicy": "open",
      "nativeStreaming": true,
      "streaming": "partial"
    }
  },

  "plugins": {
    "entries": {
      "slack": { "enabled": true }
    }
  },

  "messages": {
    "groupChat": {
      "mentionPatterns": ["#fleet"]
    }
  },

  "tools": {
    "profile": "full",
    "web": {
      "search": { "enabled": true },
      "fetch": { "enabled": true }
    }
  }
}
