{
  "gateway": {
    "port": 18789,
    "mode": "local",
    "bind": "loopback",
    "auth": {
      "mode": "token",
      "token": "${OPENCLAW_GATEWAY_TOKEN}"
    }
  },

  "agents": {
    "defaults": {
      "model": {
        "primary": "openai/gpt-5",
        "fallbacks": ["openai/codex-mini"]
      }
    }
  },

  "channels": {
    "telegram": {
      "enabled": true,
      "botToken": "${TELEGRAM_BOT_TOKEN}",
      "dmPolicy": "allowlist",
      "allowFrom": ["${TELEGRAM_OWNER_ID}"]
    },
    "slack": {
      "enabled": true,
      "mode": "socket",
      "botToken": "${SLACK_BOT_TOKEN}",
      "appToken": "${SLACK_APP_TOKEN}"
    }
  },

  "tools": {
    "profile": "full",
    "web": {
      "search": { "enabled": false },
      "fetch": { "enabled": true }
    }
  }
}
